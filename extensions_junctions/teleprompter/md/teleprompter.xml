<?xml version="1.0" encoding="utf-8"?>
<mdscript name="teleprompter" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
	<cues>
		<cue name="talk_start" instantiate="true" checkinterval="50ms">
			<actions>
				<do_if value="player.speakpriority > -1000">
					<show_help name="show_start" custom="'                                                                                                                                                                                                              '" duration="5256000min" silent="true" force="true" position="20" width="1000"/>
				</do_if>
				<do_if value="player.speakpriority == -1000">
					<remove_help all="true"/>
				</do_if>
			</actions>
		</cue>
	</cues>
</mdscript>